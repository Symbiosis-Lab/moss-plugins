{
  "name": "nostr",
  "version": "0.1.0",
  "description": "Social interactions via Nostr protocol - comments, zaps, and more",
  "main": "dist/main.bundle.js",
  "scripts": {
    "build": "npm run clean && npm run bundle && npm run copy-assets && npm run build-browser",
    "dev": "npm run clean && npm run copy-assets && concurrently \"npm run bundle -- --watch\" \"npm run watch-assets\"",
    "bundle": "esbuild src/main.ts --bundle --format=iife --global-name=NostrPlugin --outfile=dist/main.bundle.js",
    "build-browser": "esbuild browser/nostr-social.ts --bundle --format=iife --outfile=dist/nostr-social.js && cp browser/nostr-social.css dist/",
    "clean": "rm -rf dist && mkdir -p dist",
    "copy-assets": "cp assets/* dist/",
    "watch-assets": "chokidar 'assets/**/*' -c 'npm run copy-assets'",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "moss",
    "plugin",
    "nostr",
    "social",
    "interactions"
  ],
  "author": "Symbiosis Lab",
  "license": "MIT",
  "devDependencies": {
    "@symbiosis-lab/moss-api": "^0.5.0",
    "@tauri-apps/api": "^2.9.1",
    "@types/node": "^20.0.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.0",
    "esbuild": "^0.27.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "nostr-tools": "^2.10.4"
  }
}
