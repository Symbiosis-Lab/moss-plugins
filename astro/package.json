{
  "name": "astro",
  "version": "1.0.0",
  "description": "Astro static site generator plugin for Moss",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run clean && npm run bundle && npm run copy-assets",
    "dev": "npm run clean && npm run copy-assets && concurrently \"npm run bundle -- --watch\" \"npm run watch-assets\"",
    "bundle": "esbuild src/main.ts --bundle --format=iife --global-name=Astro --outfile=dist/main.bundle.js",
    "clean": "rm -rf dist && mkdir -p dist",
    "copy-assets": "cp assets/* dist/",
    "watch-assets": "chokidar 'assets/**/*' -c 'npm run copy-assets'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run --config vitest.config.e2e.ts"
  },
  "keywords": [
    "moss",
    "plugin",
    "astro",
    "static-site-generator",
    "generator"
  ],
  "author": "Symbiosis Lab",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.0",
    "esbuild": "^0.27.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@symbiosis-lab/moss-api": "^0.6.1"
  }
}
