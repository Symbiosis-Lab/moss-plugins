{
  "name": "github-deployer",
  "version": "1.0.0",
  "description": "Deploy to GitHub Pages via GitHub Actions",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run clean && npm run compile && npm run bundle && npm run copy-assets",
    "dev": "npm run build && concurrently \"tsc --watch\" \"npm run watch-assets\"",
    "compile": "tsc",
    "bundle": "esbuild dist/main.js --bundle --format=iife --global-name=GitHubDeployer --outfile=dist/main.bundle.js",
    "clean": "rm -rf dist && mkdir -p dist",
    "copy-assets": "cp assets/* dist/",
    "watch-assets": "chokidar 'assets/**/*' -c 'npm run copy-assets'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "moss",
    "plugin",
    "github-pages",
    "deployment",
    "deployer"
  ],
  "author": "Symbiosis Lab",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.0",
    "esbuild": "^0.27.0",
    "moss-api": "file:../moss-api",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  }
}
